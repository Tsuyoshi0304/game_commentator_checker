<div class="col-11 container">
  <div class="row">
    <div class="title round">
      <h1>ログイン</h1>
    </div>
    <div class="col-md-8 col-lg-6 login-wrapper">
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス', class: 'label round' %>
          <%= f.email_field :email, class: 'form_control' %>
        </div>
        <div class="form-group">
          <%= f.label :password, 'パスワード', class: 'label round' %>
          <%= f.password_field :password, class: 'form_control' %>
        </div>
        <%= f.hidden_field :commentators, value: @commentators %>
        <%= f.hidden_field :similar_commentators, value: @similar_commentators %>
        <div class="login-button">
          <%= f.submit 'ログイン', class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class='text-center'>
        <%= link_to 'ユーザー登録がお済みでない方はこちら', new_user_path(
          commentators: @commentators, similar_commentators: @similar_commentators
          ), class: 'btn btn-warning' %><br>
        <%= link_to 'パスワードをお忘れの方はこちら', new_password_reset_path, class: 'btn btn-danger', style: 'margin-top: 20px;' %>
      </div>
    </div>
  </div>
</div>




