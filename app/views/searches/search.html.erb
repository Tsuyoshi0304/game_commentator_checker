<div class="container">
	<div class="title round">
		<h1>オススメ実況者は...</h1>
	</div>	

  <div class="result">
		<% if @datas.blank? %>
			<p>見つかりませんでした。</p>
		<% else %>
		<div class="commentator">
			<% @datas.each do |commentator| %>
				<div class="commentator-name round">
					<%= commentator.name %>
				</div>
					<%= link_to image_tag(commentator.youtube_icon, class: 'youtube-icon'), commentator.youtube_channel_url %>
					<div class="video">
						<iframe width="230" height="180" src="<%= commentator.popular_movies.pluck(:movie).first %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
					</div>
      <% end %>
		</div>
		<% end %>
	</div>

	<%= link_to 'タイトルに戻る', root_path, class: 'btn btn-primary round' %>
</div>

